<html>
<head>
<title>Simulated FIDESSA Application</title>
<HTA:APPLICATION
  APPLICATIONNAME="Simulated FIDESSA Application"
  ID="SimulatedFIDESSAApplication"
  VERSION="1.0"/>
</head>

<script language="VBScript">

Dim txtUserId, txtPassword, txtBuySell, txtClient, txtAction, txtOutput

Sub Window_OnLoad
	window.resizeTo 1150,650
    window.moveTo 770, 10
	Call Form
  'This method will be called when the application loads
  'Add your code here
End Sub

Sub Form
	Set txtUserId = document.getElementById("txtUserId")
	Set txtPassword = document.getElementById("txtPassword")
	Set txtBuySell = document.getElementById("txtBuySell")
	Set txtClient = document.getElementById("txtClient")
	Set txtAction = document.getElementById("txtAction")
	Set txtOutput = document.getElementById("txtOutput")
End Sub

Sub Login
	txtOutput.value = "Login" & vbNewLine & "User Id: " & txtUserId.value & vbNewLine & "Password: " & txtPassword.value
End Sub

Sub Create
	txtOutput.value = "Create" & vbNewLine & "Buy/Sell: " & txtBuySell.value &  ", Client: " & txtClient.value
End Sub

Sub Action
	txtOutput.value = "Action" & vbNewLine & txtAction.value
End Sub

'--------------------------------------------------------------------------
'--------------------------------------------------------------------------
Sub Logout
	txtUserId.value = ""
	txtPassword.value = ""
	txtBuySell.value = ""
	txtClient.value = ""
	txtAction.value = ""
	txtOutput.value = ""
End Sub

Sub Clear
	txtUserId.value = ""
	txtPassword.value = ""
	txtBuySell.value = ""
	txtClient.value = ""
	txtAction.value = ""
	txtOutput.value = ""
End Sub


Sub ExitApp
	Self.close 
End Sub


</script>

<body bgcolor="lightblue">

Userid: &nbsp;&nbsp;&nbsp;&nbsp; <Input type="text" size="20" title="Enter user id" id="txtUserId" style="background-color:lightgrey;color=blue"><p/>
Password: <Input type="password" size="20" title="Enter password" id="txtPassword" style="background-color:lightgrey;color=blue">
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
<input type="button" value="Login"  onclick="Login" id="btnLogin" title="Click to login" style="width:100px;color:green;font-weight:bold"/> 
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
<input type="button" value="Logout" onclick="Logout" id="btnLogout" title="Click to logout" style="width:100px;color:red;font-weight:bold"/> 
<p/> ------------------------------------------------------------------------------------------------ <p/> 

Buy/Sell: &nbsp;&nbsp;&nbsp;<Input type="text" size="1" title="Enter B or S" id="txtBuySell" style="background-color:lightgrey;color=blue" visibility="hidden">&nbsp;&nbsp;&nbsp;
Client: <Input type="text" size="20" title="Enter client" id="txtClient" style="background-color:lightgrey;color=blue">
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
<input type="button" value="Create"  onclick="Create" id="btnCreate" title="Click to create" style="width:100px;color:green;font-weight:bold"/> 
<p/> ------------------------------------------------------------------------------------------------ <p/> 

Action: &nbsp;&nbsp;&nbsp;&nbsp; <Input type="text" size="35" title="Enter action" id="txtAction" style="background-color:lightgrey;color=blue">
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
<input type="button" value="Action"  onclick="Action" id="btnAction" title="Click to perform action" style="width:100px;color:green;font-weight:bold"/> 
<p/> ================================================================================================ <p/> 

<textarea type="textarea" cols="100" rows="4" id="txtOutput" style="background-color:lightgrey;color=blue"> </textarea> <p/><p/>
<p/> ================================================================================================ <p/> 
<input type="button" value="Exit" onclick="ExitApp" id="btnExit" style="width:100px;color:red"/> 
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
<input type="button" value="Clear" onclick="Clear" id="btnClear" style="width:100px;color:red"/> <p/><p/>

</body>
</html>